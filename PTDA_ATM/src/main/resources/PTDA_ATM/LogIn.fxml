            <Label alignment="CENTER" layoutX="39.0" layoutY="27.0" prefHeight="49.0" prefWidth="266.0" text="ByteBank ATM">
               <font>
                  <Font name="SansSerif Bold" size="30.0" />
               </font>
            </Label>
            <TextField fx:id="cardNumberInput" layoutX="25.0" layoutY="286.0" prefHeight="32.0" prefWidth="295.0" promptText="Card Number..." style="-fx-background-radius: 6;" />
            <PasswordField fx:id="passwordInput" layoutX="25.0" layoutY="332.0" prefHeight="32.0" prefWidth="295.0" promptText="Password..." style="-fx-background-radius: 6;" />
