                  <Image url="@../Images/logo2.png" />
               </image>
            </ImageView>
            <Hyperlink fx:id="signupLink" layoutX="217.0" layoutY="475.0" onAction="#switchToSignUp" text="Sign up" textFill="#1464b4">
               <font>
                  <Font name="SansSerif Bold" size="12.0" />
               </font>
